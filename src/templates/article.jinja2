<head>
    <meta charset="UTF-8">
    <title></title>
    <link rel="canonical" href="{{ url }}"/>
    <link rel="icon" href="{{ instance.logoUrl }}" />
    <meta property="theme-color" content="#00a8fc"/>
    <meta property="twitter:site" content="{{ author.nickname }}"/>
    <meta property="twitter:creator" content="{{ author.nickname }}"/>
    <meta property="twitter:title" content="{{ title }} ({{ author.nickname }})"/>
    {% if img %}
        <meta property="twitter:image" content="{{ img }}"/>
        <meta property="twitter:card" content="summary_large_image"/>
        <meta property="og:image" content="{{ img }}"/>
    {% else %}
        <meta property="twitter:card" content="summary"/>
    {% endif %}

    <meta property="og:url" content="{{ url }}"/>
    <meta property="og:title" content="{{ title }} ({{ author.nickname }})"/>
    <meta property="og:description" content="{{ post.snippet }}"/>
    <meta property="og:site_name" content="{{ instance.title }}"/>

    <meta property="author" content="{{ author.nickname }}">
    <!-- Telegram -->
    <meta property="al:android:app_name" content="Medium"/>
    <meta property="article:published_time" content="{{ published_time }}"/>
    <meta name="telegram:channel" content="@{{ channel }}"/>
</head>
<body>
<section class="section-backgroundImage">
    <figure class="graf--layoutFillWidth"></figure>
</section>
<section class="section--first">
    If you can see this, your browser is doing something weird with your user agent.
    <a href="{{ url }}">View original post</a>
</section>
<article>
    <!-- cover image -->
    {% if img %}
    <section class="is-imageBackgrounded">
        <figure>
            <img src="{{ img }}" alt="coverImage"/>
        </figure>
    </section>
    {% endif %}
    <!-- article content -->
    {{ post.html }}
    <p><a href="{{ url }}">查看原文</a></p>
    <!-- author -->
    <details>
        <summary>作者信息</summary>
        <p>
            {% if author.avatarUrl %}
            <pic width="100" height="100" src="{{ host }}{{ author.avatarUrl }}" alt="profile picture"></pic>
            {% endif %}
            <a href="{{ host }}{{ author.url }}">{{ author.nickname }}</a>
        </p>
    </details>
</article>
</body>
</html>
